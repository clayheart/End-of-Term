<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Health">


    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="458dp"
        android:layout_height="305dp"
        app:layout_constraintBottom_toBottomOf="@+id/Happy"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/teal" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="428dp"
        android:layout_height="351dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/teal" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="408dp"
        android:layout_height="471dp"
        app:layout_constraintBottom_toTopOf="@+id/Happy"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/calm" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_height="145dp"
        android:layout_marginEnd="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Happy"
        app:srcCompat="@drawable/gif" />

    <ProgressBar
        android:id="@+id/Happy"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="325dp"
        android:layout_height="83dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="164dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="269dp"
        android:layout_height="54dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="28dp"
        android:text="“People Who Are Crazy Enough To Think They Can Change The World, Are The Ones Who Do.” – Rob Siltanen
"
        app:layout_constraintBottom_toTopOf="@+id/Happy"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>